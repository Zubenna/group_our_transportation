<div class='sign-up-header'>
  <div class='trans-head-one'>
    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-three-dots" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M3 9.5a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3zm5 0a1.5 1.5 0 1 1 0-3 1.5 1.5 0 0 1 0 3z"/>
    </svg>
    <svg width="1.5em" height="1.5em" viewBox="0 0 16 16" class="bi bi-battery-half" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M12 5H2a1 1 0 0 0-1 1v4a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V6a1 1 0 0 0-1-1zM2 4a2 2 0 0 0-2 2v4a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V6a2 2 0 0 0-2-2H2z"/>
      <path d="M2 6h5v4H2V6zm12.5 3.5a1.5 1.5 0 0 0 0-3v3z"/>
    </svg>
  </div>
  <div class='trans-head-two'>
  <%= link_to user_path(current_user) do %>
  <svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
    <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
  </svg>
  <% end %>
     <h4 class='trans-list-title'>Edit Transportation</h4>
     <h2>NEXT</h2>
  </div>
</div>
<div class='container-fluid new-trans-form' id="create-new-trans">
<%= form_with model: @transportation, local: true do |f| %>
  <span class="flash"><%= flash.notice %></span>
    <div id='transport-form'>
      <span class='span-t'><%= f.select :group_id, Group.all.collect { |x| [x.name, x.id] }, {:include_blank => 'Select One' } %></span>
      <h2>Select Group</h2>
    </div>
    <div class = 'new-t-box'>
      <%= f.text_field :name, placeholder: 'Enter Description', class: 'form-input form-control' %>
    </div>
    <div class = 'new-t-box'>
      <%= f.text_field :distance, placeholder: 'Enter Total Distance in KM', class: 'form-input form-control' %>
    </div>
    <div class = 'new-t-submit'>
      <%= f.submit 'Update Record', class: 'new-transport btn btn-primary' %>
    </div>
<% end %>
</div>
