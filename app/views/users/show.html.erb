<div class='profile-box'>
    <span class="flash"><%= flash.notice %></span>
    <section class='user_info'>
    <%= render 'layouts/display_profile_picture' %>
    <h4>
    <%= @user.first_name %>
    <%= @user.last_name %>
    </h4>
    </section>
    <div class='option-box'>
      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-card-list shape-icon circle-me" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M14.5 3h-13a.5.5 0 0 0-.5.5v9a.5.5 0 0 0 .5.5h13a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
        <path fill-rule="evenodd" d="M5 8a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7A.5.5 0 0 1 5 8zm0-2.5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5zm0 5a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5z"/>
      </svg>
    <div class='option-link'>
      <%= link_to '  All my logged in transportations', transportations_path, class: 'user-option-li' %>
    </div>
    </div>
    <div class='option-box'>
      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-geo-alt shape-icon circle-me" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M12.166 8.94C12.696 7.867 13 6.862 13 6A5 5 0 0 0 3 6c0 .862.305 1.867.834 2.94.524 1.062 1.234 2.12 1.96 3.07A31.481 31.481 0 0 0 8 14.58l.208-.22a31.493 31.493 0 0 0 1.998-2.35c.726-.95 1.436-2.008 1.96-3.07zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
        <path fill-rule="evenodd" d="M8 8a2 2 0 1 0 0-4 2 2 0 0 0 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
      </svg>
    <div class='option-link'>
      <%= link_to 'All my ungrouped transportations', external_path, class: 'user-option-li' %>
    </div>
    </div>
    <div class='option-box'>
      <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-collection-fill shape-icon circle-me" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path d="M0 13a1.5 1.5 0 0 0 1.5 1.5h13A1.5 1.5 0 0 0 16 13V6a1.5 1.5 0 0 0-1.5-1.5h-13A1.5 1.5 0 0 0 0 6v7z"/>
        <path fill-rule="evenodd" d="M2 3a.5.5 0 0 0 .5.5h11a.5.5 0 0 0 0-1h-11A.5.5 0 0 0 2 3zm2-2a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 0-1h-7A.5.5 0 0 0 4 1z"/>
      </svg>
    <div class='option-link'>
      <%= link_to 'Different means of transportations', groups_path, class: 'user-option-li' %>
    </div>
    </div>
    <%= link_to 'Log Out', '/logout', class: 'btn btn-lg log-out', method: :delete %>
</div>
